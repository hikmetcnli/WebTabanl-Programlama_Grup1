@using WP_Hafta2.Models

@model List<Araba>

<html>
<head>
	<style>
		table {
			font-family: Arial, Helvetica, sans-serif;
			border-collapse: collapse;
			width: 100%;
		}

		td, th {
			border: 1px solid #ddd;
			padding: 8px;
		}

		tr:nth-child(even) {
			background-color: #f2f2f2;
		}

		tr:hover {
			background-color: #ddd;
		}

		th {
			padding-top: 12px;
			padding-bottom: 12px;
			text-align: left;
			background-color: #04AA6D;
			color: white;
		}
	</style>
</head>
<body>

	<h1>Arabalar</h1>

	<table>
		<tr>
			<th>ID</th>
			<th>Model</th>
			<th>Renk</th>
			<th>Fiyat</th>
			<th>Yıl</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td> @item.Id </td>
				<td>@item.Model </td>
				<td>@item.Color </td>
				<td>@item.Fiyat </td>
				<td>@item.Yil </td>
			</tr>
		}
		
	</table>

</body>
</html>